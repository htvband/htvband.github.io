@import url("reset.css")
@import url("typogrify.css")
//@import url(fonts.googleapis.com/css?family=Yanone+Kaffeesatz&subset=latin);

body
  margin 0
  padding 0
  color #000305
  font-size 87.5%
  font-family 'Trebuchet MS', Trebuchet, 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif
  line-height 1.429
  text-align: left

h1
  font-size: 2.8em
h2
  font-size: 2.6em
h3
  font-size: 2.4em
h4
  font-size: 2.2em
h5
  font-size: 2.0em
h6
  font-size: 1.8em

h1, h2, h3, h4, h5, h6
  font-weight: 400
  line-height: 1.1
  margin-bottom: .8em
  font-family: 'Yanone Kaffeesatz', arial, serif

h3, h4, h5, h6
  margin-top: .8em
	
hr
  border: 2px solid #EEEEEE

h3
  border-bottom: 1px solid #000

	
/* Paragraphs */
div.line-block, p
  margin-top: 1em;
  margin-bottom: 1em;

/* Lists */
// ul
//   list-style: outside disc;
//   margin: 0em 0 0 1.5em;


// ol {
// 	list-style: outside decimal;
// 	margin: 0em 0 0 1.5em;
// }

li
  margin-top: 0.5em;

/* HTML5 tags */

header, section, footer,
aside, nav, article, figure
  display: block;

.clearfix:after
  clear: both
  content: "."
  display: block
  font-size: 0
  height: 0
  visibility: hidden

/* Header (logo, nav) */

header
  clear: both
  height: 100px
  padding: 0
  width: 100%

header .inner-wrapper
  position: fixed
  width: 100%
  z-index: 14
  background-color: #000
  box-shadow: 0px 2px 6px #303030

header .inner-wrapper .really-inner-wrapper
  margin: 0 auto
  position: relative
  width: 980px

header #logo
  float: left
  position: relative

header #nav-primary
  float: right

#nav-primary
  font-size: 1.6em;
  float: right;
  display: block;
  margin-top: 3%
  padding: 0;
  text-align: center;

#nav-primary ul
  float: left;
  list-style: none;
  margin: 0;
  padding: 0;

#nav-primary li
  float: left;
  display: inline;
  margin: 0;
  padding: 4px

#nav-primary li:after
  color: #fff;

#nav-primary li:last-child:after
  content: "";
  display: none;

#nav-primary .nav-button
  background-color: #663300
  padding: 4p
  border-radius: 4px
  margin-right: 8px

#nav-primary a
  color: #fff;
  display: inline-block;
  margin: 0px 0.5em;
  text-decoration: none;
  font-weight: bold;

#nav-primary a:hover, #nav-primary a:active,
#nav-primary ul li.active a:link,
#nav-primary ul li.active a
  border-bottom: 3px solid #663300;

#nav-primary ul li.active.nav-button a,
  border-bottom: none

#nav-primary .nav-button a:hover
  border: none

/* Mobile nav */

#mobile-toggle, .mobile-toggle
  display: none;

/* Content */

.all-mighty-wrapper
  position: relative
  width: 980px
  background-color: #fff
  margin: 0 auto

.body
  clear: both;
  margin: 0 auto;
  width: 100%;

section.body .subsection
  clear: both;
  display: block;
  margin: 0 auto;
  width: 760px;
  margin-top: 20px;

section.body .subsection img
  margin-bottom: 20px;

section.body .subsection div p
  clear: both;

section.body .subsection img, section.body .subsection div
  float: left;

section.body .subsection div
  margin-left: 20px;
  margin-bottom: 20px;
  width: 70%;

section.body .subsection div .icons-gallery
  float: left;
  margin: 0 auto;
  width: 100%;

/* Body */

#main
  width: 100%;
  border-bottom: 1px dashed #303030;

#content
  margin: 0 auto;
  margin-bottom: 0.8em;
  overflow: hidden;

#page-intro
  padding: 130px 0;
  margin: 0 auto;
  text-align: center;

#main.home #page-intro *
  color: #000;

#page-intro h1,
#page-intro h2
  width: 760px;
  margin: 0 auto;
  margin-bottom: 30px;

#page-intro h2
  padding-top: 10px;
  line-height: 1.2em;
  font-size: 1.5em;
  color: #404040;

#page-intro img
  background-color: #000;
  padding: 20px;

#main.bg-white
  background-color: #fff;
  color: #000;

#main.bg-white h1
  color: #000;

#main.bg-grey
  background-color: #e8e8e8;

#main.bg-grey h1
  color: #000;

#main.bg-blue
  background-color: #6699ff;
  color: #fff;

#main.bg-blue h1,
#main.bg-blue h2,
#main.bg-blue p
  color: #000;

.capitalize:first-letter
  text-transform: uppercase

/*  Footer */

#contentinfo
  padding-bottom: 2em;
  text-align: right;

/* Responsive */

@media screen and (max-width: 960px)
  body
    background-color #fff
    
  h1
    font-size: 2em
  h2
    font-size: 1.571em
  h3
    font-size: 1.429em
  h4
    font-size: 1.286em
  h5
    font-size: 1.143em
  h6
    font-size: 1em

  /* Responsive: header, logo, nav */
  
  header
    height: auto;
    
  header .inner-wrapper
    position: relative
    text-align: center
    box-shadow: none
    height: 135px;
  
  header .inner-wrapper .really-inner-wrapper
    width: auto

  header #logo
    float: none

  #nav-primary
    display: none
    width: 100%
    max-width: 100%

  #mobile-toggle
    display: none
    margin-top: 50px
    
  #mobile-toggle:checked ~ #nav-primary, #mobile-toggle:checked ~ #nav-primary ul
    display: block
    opacity: 1

  .mobile-toggle
    cursor: pointer
    display: block
    position: relative
    clear: both

  #mobile-toggle:checked + .mobile-toggle:after
    content: "sluit menu"

  .mobile-toggle:after
    display: block
    /* -moz-box-sizing: border-box; */
    background: none repeat scroll 0 0 #fff
    color: #000
    content: "open menu"
    margin: 5px auto
    margin-top: 10px
    width: 20%
    padding: 4px
    text-align: center
    
  #nav-primary ul
    display: none
    float: none
    margin-bottom: 20px

  #nav-primary .nav-button
    background-color: #000
    color: #fff
    border: none
    border-radius: 0
    padding: 6x 0
    margin: 0

  #nav-primary .nav-button a
    color: #fff

  #nav-primary ul li.active.nav-button a,
    border-bottom: 2px solid #663300

  #nav-primary li:after
    content: none;

  #nav-primary ul li
    background-color: #000
    color: #fff
    width: 100%
    text-align: center
    padding: 6px 0
    font-size: 0.8em
    
  #nav-primary ul li a
    color: #fff
    font-weight: normal

  #nav-primary ul li a
    border: none

  /* Responsive: content */
   
  .all-mighty-wrapper
    width: auto

  #page-intro img
    display: none

  #main
    float: none
    border: none
    position: relative

  .body
    clear: both
    margin: 0 auto
    min-width: 100%
    max-width: 100%
    
  #content
    width: auto;
    margin-left: 5%

  #page-intro
    position: absolute
    top: 100px
    width: 100%
    max-width: 100%
    padding: 10px 0

  #page-intro h1, #page-intro h2
    width: 100%
    min-width: 100%
    max-width: 100%
    margin: 0;
    font-size: 2em

  section.body .subsection
    width: 50%

  .justified-gallery
    width: 50%

